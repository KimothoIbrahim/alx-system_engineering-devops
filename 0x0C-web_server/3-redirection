#!/usr/bin/env bash
#redirect a route

./1-install_nginx_web_server

nginx_conf="/etc/nginx/sites-available/default"

if [ -f "$nginx_conf" ]; then
	sed -i '/server {/a \
		location /redirect_me { \
			return 301 htttps://google.com; \
		}' "$nginx_conf"
		
	nginx -t
	service nginx restart
	echo "success"
else
	echo "no Nginx default file"
fi
